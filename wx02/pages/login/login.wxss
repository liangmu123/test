/* pages/index/index.wxss */
.mask{
  margin:20rpx;
}
.mask .swiper{
  margin:0 auto;
}
.main{
  width:100%;
  height: 250rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  border:1px solid beige;
  padding:10rpx 10rpx;
}
.main .left{
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width:60%;

}
.main .right{
  text-align:right;
  width: 40%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  
}
.main .right .bottom{
  height:75%;

}
.main .right image{
  width:90%;
  height:100%;
}

.btn{
  
  display: flex;
  justify-content: space-between;
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  margin-bottom:50rpx;
  
}
.btn button{
  width:30%;
}